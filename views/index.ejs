<%- layout("layouts/boilerplate") %>

<body>
  <div class="hero-page">
    <video autoplay muted playsinline loop preload="auto" class="hero-video">
      <source src="/assets/hero-video.mp4" type="video/webm" />
      <!-- <source src="movie.ogg" type="video/ogg" /> -->
      Your browser does not support the video tag.
    </video>
  </div>
  <div class="collection">
    <div class="collection-banner">
      <img src="/assets/collection-1.svg" alt="collection-banner" />
    </div>
    <div class="collection-pieces">
      <div class="collection-name">
        <p><b>Summer collection | Live now</b></p>
      </div>
      <div class="collection-cards">
        <div class="collection-piece">
          <div class="top">
            <img
              src="/assets/sample-collection-1.jpg"
              alt="sample-collection-1"
            />
          </div>
          <div class="bottom">
            <div class="name">Ocean Vase</div>
            <div class="description">
              Hand-glazed ceramic vase, 20cm height.
            </div>
            <div class="price">$100</div>
          </div>
        </div>

        <div class="collection-piece">
          <div class="top">
            <img
              src="/assets/sample-collection-2.jpg"
              alt="sample-collection-2"
            />
          </div>
          <div class="bottom">
            <div class="name">Sunset Plate</div>
            <div class="description">
              Decorative plate with hand-painted motif.
            </div>
            <div class="price">$85</div>
          </div>
        </div>

        <div class="collection-piece">
          <div class="top">
            <img
              src="/assets/sample-collection-3.jpg"
              alt="sample-collection-3"
            />
          </div>
          <div class="bottom">
            <div class="name">Stone Bowl</div>
            <div class="description">
              Small stoneware bowl, dishwasher safe.
            </div>
            <div class="price">$45</div>
          </div>
        </div>

        <div class="collection-piece">
          <div class="top">
            <img
              src="/assets/sample-collection-4.jpg"
              alt="sample-collection-4"
            />
          </div>
          <div class="bottom">
            <div class="name">Patterned Mug</div>
            <div class="description">Comfort grip mug with unique pattern.</div>
            <div class="price">$30</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
